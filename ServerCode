package sbook.com;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.InputStreamReader;
import java.io.OutputStreamWriter;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.Date;
import java.util.HashSet;
import java.util.Set;
import java.util.Vector;

public class Server implements Runnable{
    Socket socket;
    int count=0;
    Date date;
    public static Set<String> users = new HashSet<>();
    public static Vector<BufferedWriter> client = new Vector<>();

    public Server(Socket socket){
        try{
            this.socket = socket;
        }catch(Exception e){e.printStackTrace();}
    }

    public void run(){
        try{
            BufferedReader reader = new BufferedReader(new InputStreamReader(socket.getInputStream()));
            BufferedWriter writer = new BufferedWriter(new OutputStreamWriter(socket.getOutputStream()));

            client.add(writer);

            while(true){
                String data = reader.readLine().trim();
                separate(data);
                for(int i = 0; i < client.size(); i++){
                    try{
                        BufferedWriter bw = client.get(i);
                        bw.write(data);
                        bw.write("\r\n");
                        bw.flush();
                    }catch(Exception exception){
                        users.add(client.elementAt(i).toString());
                    }
                }
            }
        }catch(Exception exception){
            count++;
            date = new Date();
        }
        System.out.println(count+" user left/disconnected at "+date);
    }
    public static void separate(String incoming_data){
        String[] array = incoming_data.split(": ");
        users.add(array[0]);
        if (users.size()==0) {
            System.out.println("no user online");
        }
        else if (users.size()==1){
            System.out.println(users.size()+" user online");
        }
        else
            System.out.println(users.size()+" users online");
    }
    public static void main(String[] args) throws Exception{
        ServerSocket s = new ServerSocket(6061);
        while(s.isBound()){
            Socket socket = s.accept();
            Server server = new Server(socket);
            Thread thread = new Thread(server);
            thread.start();
        }
    }
}
